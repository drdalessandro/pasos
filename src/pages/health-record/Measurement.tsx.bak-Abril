    code: '8302-2',
    title: 'Altura',
    description: 'La medición de la altura es especialmente relevante en el primer año de vida, infancia y adolescencia.',
    chartDatasets: [
      {
        label: 'Altura',
        backgroundColor,
        borderColor,
      },
    ],
  },
